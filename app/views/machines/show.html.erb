<h1><%= @machine.location %> Vending Machine</h1>

<% @machine.snacks.each do |snack| %>
<section id="id-<%= snack.id %>">
  <%= snack.name %>
  <%= snack.cost %>
  </section>
<% end %>

<section class="avg_item_cost">
  <p>Average Snack Cost: <%= number_to_currency(@machine.average_price) %>
</section>
